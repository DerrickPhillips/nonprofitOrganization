@model List<Donation>
@{
    ViewData["Title"] = "Your Donations";
    Layout = "_Layout";
}


<div class="container" style="border-style: solid; border: 9px solid #0094cc; border-radius: 20px;margin-top: 15px; background-color: white;">
    <div>
        <a style="margin-top: 2rem" asp-action="Add" class="btn btn-dark">Donate By Card</a>
    </div>

    <div class="bg-light" style="border: 1px solid black; margin-bottom: 2rem; margin-top: 2rem">
        <p style="text-align:center;">┌────── ∘°❉°∘ ──────┐</p>
        <h2 style="text-align:center;">Donate By PayPal</h2>
        <p style="text-align:center;">Choose your charity and make donations by clicking on the Donate button below.</p>

        <form borderstyle="text-align:center;" class="form" action="https://www.paypal.com/donate" method="post" target="_blank">
            <input type="hidden" name="hosted_button_id" value="786ARK7KSFWW8" />
            <input style="display: block; margin: 0 auto;" type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
            <img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1" />
        </form> <p style="text-align:center;">└────── °∘❉∘° ──────┘</p>
    </div>
</div>
