@model Donation
@{
    ViewData["Title"] = ViewBag.Action;
    Layout = "_Layout";
}
<form asp-action="Save" method="post">
    <h2>Payment Information</h2>
    <br />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset class="text" id="paymentInfo"></fieldset>
    <div class="form-group">
        <label asp-for="CardNumber">Card Number</label>
        <input asp-for="CardNumber" class="form-control" id="ccNum" />
    </div>
    <div id="cards" class="inline">
        <input asp-for="CardNetwork" id="visa" type="radio" value="Visa" />
        <label for="visa">Visa</label>
        <input asp-for="CardNetwork" id="mc" type="radio" value="Master Card" />
        <label for="mc">Master Card</label>
        <input asp-for="CardNetwork" id="discover" type="radio" value="Discover" />
        <label for="discover">Discover</label>
        <input asp-for="CardNetwork" id="amex" type="radio" value="American Express" />
        <label for="amex">American Express</label>
    </div>
    <div class="offset">
        <label>Expiration</label>
        <div class="inline" id="exp">
            <label for="expMo" id="expMoLabel">Expiration Month</label>
            <select id="expMo" asp-for="ExpMonth">
                <option value="01">01</option>
                <option value="02">02</option>
                <option value="03">03</option>
                <option value="04">04</option>
                <option value="05">05</option>
                <option value="06">06</option>
                <option value="07">07</option>
                <option value="08">08</option>
                <option value="09">09</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
            </select>
            <label for="expYr" id="expYrLabel">Expiration Year</label>
            <select id="expYr" asp-for="ExpYear">
                <option value="2021">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
                <option value="2024">2024</option>
            </select>
        </div>
        <label for="cvv">CVV</label>
        <input id="cvv" asp-for="CVV" />
    </div>
    <div class="form-group">
        <label asp-for="TypeID">Type of Donation</label>
        <select asp-for="TypeID" class="form-control">
            <option value="">Select a type</option>
            @foreach (DonationType d in ViewBag.Type)
            {
                <option value="@d.TypeID">@d.Type</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Amount">Amount to donate</label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Comments">Write us a comment!</label>
        <textarea asp-for="Comments" class="form-control" rows="4" cols="80">Start Here!</textarea>
    </div>
    <button type="submit" class="btn btn-dark" asp-action="Save" asp-route-DonorID="1">Donate</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Cancel</a>
    <input type="hidden" asp-for="DonationID" />
    <input type="hidden" asp-for="ValidCard" id="cardV" />
</form>
<script src="~/js/script.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
