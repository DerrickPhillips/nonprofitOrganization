@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="container" style="border-style: solid; border: 9px solid #0094cc; border-radius: 20px;margin-top: 15px; background-color: white; padding-bottom: 1rem">
    <h2 style="margin-top: 1rem"><strong>Log In</strong></h2><br />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="LogIn" asp-route-returnUrl="@Model.ReturnUrl">
                <div class="form-group">
                    <label>Username:</label><br>
                    <input type="text" asp-for="Username" class="form-control" /><br>
                </div>
                <div class="form-group">
                    <label>Password:</label><br>
                    <input type="password" asp-for="Password" class="form-control" /><br><br />
                </div>
                <input class="btn btn-dark" type="submit" value="Submit"><br />
                <br />
                <input type="checkbox" title="Remember Me" asp-for="RememberMe"
                       class="form-check-inline" />
                <label asp-for="RememberMe">Remember Me</label>
            </form>
        </div>
    </div>   
</div>


