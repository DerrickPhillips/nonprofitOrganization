@model nonprofitOrganization.Models.News

    @{
        ViewData["Title"] = "Edit";
    }

<div class="text-center" style="border-style: solid; border: 9px solid #0094cc; border-radius: 20px;margin-top: 15px; margin-left: 1rem; background-color: white; padding-bottom: 1rem">
    <h1 style="margin-top: 1rem">Edit</h1>
    <hr />
    <div class="row" style="padding-right: 1rem">
        <div class="col-md-4">
            <form asp-action="Edit" style="margin-left: 1rem">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NewsID" />
                <div class="form-group">
                    <label asp-for="DatePosted" class="control-label"></label>
                    <input asp-for="DatePosted" class="form-control" />
                    <span asp-validation-for="DatePosted" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsAuthor" class="control-label"></label>
                    <input asp-for="NewsAuthor" class="form-control" />
                    <span asp-validation-for="NewsAuthor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsTitle" class="control-label"></label>
                    <input asp-for="NewsTitle" class="form-control" />
                    <span asp-validation-for="NewsTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Body" class="control-label"></label>
                    <textarea asp-for="Body" class="form-control"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-dark" />
                    <a class="btn btn-dark" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
  

 @section Scripts {
     @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 }
