@using Microsoft.AspNetCore.Identity
@model Event
@{
    string title = ViewBag.Action + " Event";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">

    <!-- Code to display any data validation messages DP.-->
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Code for the Event/Edit view DP.-->
    <!-- Code to creat the EventName field label and input for the Edit and Add view DP.-->
    <div class="form-group">
        <label asp-for="EventName">Event Name</label>
        <input asp-for="EventName" class="form-control">
    </div>

    <!-- Code to creat the EventDescription field label and input for the Edit and Add view DP.-->
    <div class="form-group">
        <label asp-for="EventDescription">Event Discription</label>
        <input asp-for="EventDescription" class="form-control">
    </div>

    <!-- Code to creat the EventDate field label and input for the Edit and Add view DP.-->
    <div class="form-group">
        <label asp-for="EventDate">Event Date</label>
        <input asp-for="EventDate" class="form-control">
    </div>

    <!-- Code to creat the EventLocation field label and input for the Edit and Add view DP.-->
    <div class="form-group">
        <label asp-for="EventLocation">Event Location</label>
        <input asp-for="EventLocation" class="form-control">
    </div>

    <!-- Code to creat the EventLeader field label and input for the Edit and Add view DP.-->
    <div class="form-group">
        <label asp-for="EventLeader">Event Leader</label>
        <input asp-for="EventLeader" class="form-control">
    </div>

    <!-- Code to creat the GuestList field label and input for the Edit and Add view DP.-->
    <div class="form-group">
        <label asp-for="GuestList">Guest List</label>
        <input asp-for="GuestList" class="form-control">
    </div>

    @*<input type="hidden" asp-for="CreatedDate" />*@

    <input type="hidden" asp-for="EventID" />

    <!-- Code to set the hidden field MemberID to the event form DP.-->
    <input type="hidden" asp-for="MemberID" />

    <button type="submit" class="btn btn-dark">@ViewBag.Action</button>

    <!-- Code to make cancel edit to return to the previous page with Event info DP.-->
    <a href='javascript:history.go(-1)'
       class="btn btn-dark">Cancel</a>

</form>