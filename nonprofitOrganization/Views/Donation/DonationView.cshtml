@model List<Donation>
@{
    ViewData["Title"] = "Your Donations";
    Layout = "_Layout";
}

<!-- Code to display donation data for Admin user DP.-->
<div class="container" style="border-style: solid; border: 9px solid #0094cc; border-radius: 20px;margin-top: 15px; background-color: white;">
    <h1 style="text-align:center; margin-top: 1rem; margin-bottom: 1rem;">Donations</h1>
    <table class="table table-bordered table-striped bg-white" style="width:100%">
        <thead>
            <tr>
                <th>Donation Type</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Donation donation in Model)
            {
                <tr>
                    <td>@donation.DonationType.Type</td>
                    <td>$@donation.Amount</td>
                    <td>@donation.DateDonated</td>
                    <td>@donation.Comments</td>
                </tr>
            }
        </tbody>
    </table>
    <a style="margin-top: 1rem; margin-bottom: 2rem" asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-dark">Back</a>
</div>
