@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="border-style: solid; border: 9px solid #0094cc; border-radius: 20px;margin-top: 15px; background-color: white;">
    <h1 style="text-align:center; margin-top: 1rem; margin-bottom: 1rem">Role Manager</h1>
    <form method="post" asp-area="Admin" asp-action="AddRole" asp-controller="RoleManager">
        <div class="input-group">
            <input name="roleName" class="form-control w-25">
            <span class="input-group-btn">
                <button class="btn btn-info btn-dark">Add New Role</button>
            </span>
        </div>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>
    <a style="margin-top: 1rem; margin-bottom: 2rem" asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-dark">Back</a>
</div>


