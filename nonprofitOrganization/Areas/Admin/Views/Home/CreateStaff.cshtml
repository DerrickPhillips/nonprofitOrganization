@model User
@{
    ViewBag.Title = "Register";
}

<h2>Register New Staff Member</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="CreateStaff" asp-area="Admin">
    <div class="form-group row">
        <div class="col-sm-2"><label>Username:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="UserName"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="UserName"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Email Address:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="Email"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Email"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="PasswordHash"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="PasswordHash"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-2 col-sm-4">
            <button type="submit" asp-area="Admin" asp-controller="Home" asp-action="CreateStaff" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>